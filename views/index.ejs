<body>
  <h1> My list of TODO</h1>
  <% if (myItems.length === 0) { %>    
    <p>Votre liste est vide</p>     
    <% } else { %>     
    <ul>         
        <% myItems.forEach(item => { %>       
            <li><%=  item %> </li>        
            <% }) %>    
      </ul>    
      <% } %>

  <form action="todoList" method="POST">

    <input name="inputItem" type="text"/>
    <button type="submit"> Ajouter</button>
  </form>
</body>
</html>